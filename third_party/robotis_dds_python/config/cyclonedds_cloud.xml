<?xml version="1.0" encoding="UTF-8" ?>
<CycloneDDS xmlns="https://cdds.io/config">
  <Domain id="any">
    <General>
      <!-- Listen on all network interfaces -->
      <NetworkInterfaceAddress>0.0.0.0</NetworkInterfaceAddress>
      
      <!-- Disable multicast for internet communication -->
      <AllowMulticast>false</AllowMulticast>
    </General>
    
    <Discovery>
      <!-- Set base port for DDS discovery -->
      <Ports>
        <Base>7400</Base>
      </Ports>
      
      <!-- Optionally add known robot peers -->
      <!--
      <Peers>
        <Peer address="ROBOT_IP:7400"/>
      </Peers>
      -->
    </Discovery>
    
    <Internal>
      <!-- Increase buffer size for WAN communication -->
      <MinimumSocketReceiveBufferSize>10MB</MinimumSocketReceiveBufferSize>
    </Internal>
  </Domain>
</CycloneDDS>
